list = [2,5,-1,4,-3,8]
index = 0
sum = 0
for a in list:
    if a < 0:
        sum += index
        index += 1
    

list = [[1,-2],[2,3]]
count = 0 
for a in list:
    for b in a:
        if b < 0 :
            count += 1
            break

